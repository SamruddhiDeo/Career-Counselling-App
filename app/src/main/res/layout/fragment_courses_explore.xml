<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color"
                android:text="Resume Tips"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job prospects:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_19ssp"/>

            <TextView
                android:id="@+id/jobProspectsDescription"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jobSoftware"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills and Qualifications:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_19ssp"/>

            <TextView
                android:id="@+id/jobSkillsDescription"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skillsSoftware"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary Range (varies by location and experience):"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_19ssp"/>

            <TextView
                android:id="@+id/jobSalaryDescription"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salarySoftware"
                android:textSize="@dimen/_13ssp"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>