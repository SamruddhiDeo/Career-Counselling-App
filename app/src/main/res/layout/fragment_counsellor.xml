<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/profile_bg"
    android:padding="@dimen/_16sdp"
    tools:context=".CounsellorFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book counsellor session"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textSize="@dimen/_20sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/edittext_bg"
            android:orientation="vertical">

            <!-- Counselor Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Emily Johnson"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>

            <!-- Counselor Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education: PhD in Psychology, Stanford University"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="8dp"/>

            <!-- Counselor Contact Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience: 10+ years in counseling and mentoring students"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAllCaps="false"
                android:background="@color/light_app_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/edittext_bg"
            android:orientation="vertical">

            <!-- Counselor Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mr. David Smith"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>

            <!-- Counselor Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education: Master's in Counseling, University of California"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="8dp"/>

            <!-- Counselor Contact Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience: Former college advisor, 8+ years in counseling roles"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAllCaps="false"
                android:background="@color/light_app_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/edittext_bg"
            android:orientation="vertical">

            <!-- Counselor Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ms. Sarah Patel"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>

            <!-- Counselor Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education: Master's in Counseling Psychology, UCLA"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="8dp"/>

            <!-- Counselor Contact Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience: Certified counselor, 5+ years of experience in community outreach"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="4dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAllCaps="false"
                android:background="@color/light_app_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>